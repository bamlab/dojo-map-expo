{
  "name": "myproject-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "patch-package",
    "connect_db": "docker exec -ti myproject-database psql -h localhost -p 5432 -U docker -d myproject",
    "seeds": "babel-node src/seeds/cli.js",
    "dev:database": "docker-compose up -d",
    "dev:watch": "webpack --config webpack.config.js --watch | pino-pretty",
    "dev": "npm-run-all --serial dev:database 'typeorm migration:run' seeds dev:watch",
    "prod:build": "NODE_ENV=production webpack --config webpack.config.js",
    "start": "node dist/main.js | pino",
    "test": "npm-run-all --parallel test:*",
    "test:lint": "yarn eslint .",
    "test:flow": "yarn flow",
    "test:unit": "yarn jest",
    "jest": "jest --runInBand",
    "typeorm": "CLI=true ./node_modules/.bin/babel-node ./node_modules/.bin/typeorm --config ./src/database/ormconfig"
  },
  "dependencies": {
    "apollo-engine": "^1.1.2",
    "apollo-server": "^2.3.1",
    "apollo-server-koa": "^2.3.1",
    "config": "^3.0.1",
    "dataloader": "^1.4.0",
    "firebase-admin": "^6.5.0",
    "graphql": "^14.0.2",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-pino-logger": "^2.1.3",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "pg": "^7.8.0",
    "typeorm": "^0.2.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-decorators": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "eslint": "^5.12.0",
    "eslint-config-bambi": "^1.4.0",
    "flow-bin": "^0.79.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "jest": "^23.6.0",
    "nodemon-webpack-plugin": "^4.0.7",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.0.0-14",
    "pino-pretty": "^2.5.0",
    "postinstall-prepare": "^1.0.1",
    "prettier": "^1.15.3",
    "source-map-support": "^0.5.10",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-graphql-loader": "^1.0.0",
    "webpack-node-externals": "^1.7.2"
  }
}
